<h1>Groups</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

<% @groups.each do |group| %>
  <tr>
    <td><%= link_to group.name, group %></td>
    <td>
      <%= link_to icon_tag('pencil'), edit_group_path(group), :title => 'Edit' %>
      <%= link_to icon_tag('remove'), group,
        method: :delete, data: { confirm: 'Are you sure?' },
        :title => 'Destroy' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Group', new_group_path %>
