<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td>
      <%= link_to icon_tag('pencil'), edit_user_path(user), :title => 'Edit' %>
      <%= link_to icon_tag('remove'), user,
        method: :delete, data: { confirm: 'Are you sure?' },
        :title => 'Destroy' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
